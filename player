	if(keyboard_check(ord("A"))) x -= 100;
	if(keyboard_check(ord("W"))) y -= 100;	
	if(keyboard_check(ord("S"))) y += 100;
	cooldown = 60;
}
cooldown = cooldown - 1;
*/
x = clamp(x, 0, room_width-sprite_width);
y = clamp(y, 0, room_height-sprite_height);
